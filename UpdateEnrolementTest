//Write 3 UNIT TESTS to test your Class. 
//Unit Test 1 Student Test1  -- Tertiary Post-Graduate > Advanced -- Becomes Tertiary Post-Graduate > Extra
//Unit Test 2 Student Test2 -- Tertiary Graduate > Ultimate -- Becomes Tertiary Graduate > Ultimate
//Unit Test 3 Student Test -- Below Tertiary > Extra  -- Becomes Below Tertiary > Advanced

@isTest
public class UpdateEnrolementTest {
    
    public static testmethod void updateContactTest(){
        
        Test.startTest();
        
        Contact testContact1 = new Contact ();
        testContact1.FirstName = 'Student';
        testContact1.LastName = 'Test1';
        testContact1.Prior_Qualification__c = 'Tertiary Post-Graduate';
        testContact1.Enrolment_Progression__c = 'Extra';
        insert testContact1;
        
        Contact testContact2 = new Contact ();
        testContact2.FirstName = 'Student';
        testContact2.LastName = 'Test2';
        testContact2.Prior_Qualification__c = 'Tertiary Graduate';
        testContact2.Enrolment_Progression__c = 'Ultimate';
        insert testContact2;
        
        Contact testContact3 = new Contact ();
        testContact3.FirstName = 'Student';
        testContact3.LastName = 'Test3';
        testContact3.Prior_Qualification__c = 'Below Tertiary';
        testContact3.Enrolment_Progression__c = 'Advanced';
        insert testContact3;
        
        List<Contact> output = UpdateEnrolement.UpdateEnrole();
        List<Contact> contactList = [SELECT Id, Enrolment_Progression__c FROM Contact];       
        
        System.assertEquals('Extra', testContact1.Enrolment_Progression__c);
		System.assertEquals('Ultimate', testContact2.Enrolment_Progression__c);
		System.assertEquals('Advanced', testContact3.Enrolment_Progression__c);
        
        Test.stopTest();
    }  
}
